pipeline {
    agent any
    triggers {
        pollSCM('*/15 * * * *')
    }
    options { disableConcurrentBuilds() }
    stages {
        stage('Permissions') {
            steps {
                sh 'chmod 775 *'
            }
        }
    }
    stage('Cleanup') {
            steps {
                sh 'mvn clean'
            }
        }

    stage('Test') {
            steps {sh 'mvn clean test'}
    }

    stage('Build') {
        steps {sh 'mvn clean package'}
    }

    stage('Build Docker Image') {
        when { branch "master" }
            steps {
                sh '''
                    docker build --no-cache -t  football-api .
                    docker tag football-api:latest
                    docker rmi person:latest
                '''
            }
    }
    stage('Run the Docker Container') {
        when { branch "master" }
        steps {
            sh '''
                    docker pull football-api:latest
                    docker stop football-api
                    docker rm football-api
                    docker run -p 9090:9090 --name football-api -t -d football-api
                    docker rmi -f $(docker images -q --filter dangling=true)
                '''
            }
    }
}